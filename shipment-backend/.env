# ============================================
# SurakshitSafar Backend Environment Variables
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/surakshitsafar
MONGODB_TEST_URI=mongodb://localhost:27017/surakshitsafar_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_must_be_at_least_32_characters_longeyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiYWRtaW4iOnRydWUsImlhdCI6MTUxNjIzOTAyMn0.KMUFsIDTnFmyG3nMiGM6H9FNFUROf3wh7SmqJp-QV30
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Razorpay Payment Gateway Configuration
MOCK_PAYMENTS=true
PAYMENT_CURRENCY=INR
COMPANY_LISTING_FEE=1500000
MOCK_PAYMENT_KEY=mock_key_demo
MOCK_PAYMENT_SECRET=mock_secret_key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@surakshitsafar.com
SMTP_PASS=your_email_app_password
EMAIL_FROM=SurakshitSafar <noreply@surakshitsafar.com>

# Admin Default Credentials (CHANGE IN PRODUCTION!)
DEFAULT_ADMIN_USERNAME=gokul
DEFAULT_ADMIN_EMAIL=gokul@surakshitsafar.com
DEFAULT_ADMIN_PASSWORD=santji

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=10

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# External API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
CURRENCY_API_KEY=your_currency_conversion_api_key

# Cache Configuration (Redis - Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=3600

# Monitoring & Analytics
ENABLE_ANALYTICS=true
ANALYTICS_SECRET=your_analytics_secret
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Company Verification
AUTO_APPROVE_THRESHOLD=5
MANUAL_REVIEW_THRESHOLD=10
VERIFICATION_EXPIRY_DAYS=365

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_QUEUE_SIZE=1000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
AWS_S3_BUCKET=surakshitsafar-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Feature Flags
ENABLE_COMPANY_RATING=true
ENABLE_ROUTE_OPTIMIZATION=true
ENABLE_BULK_OPERATIONS=true
ENABLE_ADVANCED_ANALYTICS=true

# Development Settings (Remove in Production)
ENABLE_CORS_ALL=false
DEBUG_MODE=false
MOCK_PAYMENTS=false
SEED_DATABASE=true