{
  "name": "surakshitsafar-backend",
  "version": "1.0.0",
  "description": "Backend API for SurakshitSafar Cargo Insurance Portal - A comprehensive platform for connecting cargo shipments with insurance providers",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "seed": "node scripts/seedData.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "logs:clear": "rm -rf logs/*.log",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seedData.js",
    "build": "echo 'No build step required for Node.js backend'",
    "health": "curl -f http://localhost:5000/api/health || exit 1"
  },
  "keywords": [
    "cargo",
    "insurance",
    "shipping",
    "logistics",
    "mern",
    "nodejs",
    "express",
    "mongodb",
    "razorpay",
    "api"
  ],
  "author": {
    "name": "SurakshitSafar Team",
    "email": "dev@surakshitsafar.com",
    "url": "https://surakshitsafar.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/surakshitsafar/backend.git"
  },
  "bugs": {
    "url": "https://github.com/surakshitsafar/backend/issues"
  },
  "homepage": "https://surakshitsafar.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^6.10.0",
    "razorpay": "^2.9.2",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "validator": "^13.11.0",
    "crypto": "^1.0.1",
    "nodemailer": "^6.9.7",
    "cron": "^3.1.6",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "@types/jest": "^29.5.6",
    "concurrently": "^8.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/*.js",
      "!src/utils/logger.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "ignore": ["tests/", "logs/", "coverage/"],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  }
}